{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2016"],
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "noUnusedLocals": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
